#include <stdio.h>
int main()
{
int i,j;
printf("\n\n\n\n\n\n\n"); 
 for(i=0;i<4;i++)
        {
        for(j=1;j<2*(i+1)-1;j++)
		printf("  ");
		for(j=0;j<7-i*2;j++)
		printf("*");
		printf("\n");
		}
printf("   *********  *  ********\n"
       "  *********** * **********\n"
       " ************* *************\n");//前三排的规律性不强  所以直接显示就好了
	for(i=0;i<4;i++)//显示中间三排
		{
		for(j=0;j<29;j++)
		printf("*");
		printf("\n");
		}
	for(i=0;i<5;i++)//显示呈递减趋势规律的中间5排
		{
		for(j=0;j<2*(i+1)-1;j++)
		printf(" ");
		for(j=0;j<27-i*4;j++)
		printf("*");
		printf("\n");
		}
}
